<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings_dropbox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.venkatesan.das.cardmanager.settingsController">

    <TextView
        android:text="Bulk Add/Remove:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="24sp"
        android:textColor="@color/barLight"
        android:layout_alignBaseline="@+id/bulkButton"
        android:layout_alignBottom="@+id/bulkButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="User Name:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/ownerName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp"
        android:textColor="@color/barLight" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/enterUsername"
        android:padding="10sp"
        android:paddingBottom="10sp"
        android:paddingEnd="10sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingStart="10sp"
        android:paddingTop="10sp"
        android:imeOptions="actionDone"
        android:background="@drawable/common_btn_light_gray_disabled"
        android:backgroundTint="@color/galleryItemSelectedOverlay"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/ownerName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="textCapWords"
        android:textColor="@color/barLight" />

    <TextView
        android:text="Location:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dropboxPassword"
        android:textSize="24sp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/enterUsername"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/barLight" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:id="@+id/enterLocation"
        android:imeOptions="actionDone"
        android:background="@drawable/common_btn_light_gray_normal"
        android:backgroundTint="@color/galleryItemSelectedOverlay"
        android:layout_below="@+id/dropboxPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="text"
        android:textColor="@color/barLight" />

    <Button
        android:text="Save Information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:id="@+id/setDetails"
        android:layout_below="@+id/enterLocation"
        android:layout_centerHorizontal="true"
        android:onClick="saveDropboxCredentials" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bulkButton"
        android:layout_alignRight="@+id/bulkButton"
        android:layout_alignEnd="@+id/bulkButton"
        android:layout_marginTop="25dp"
        android:id="@+id/autoCommitButton" />

    <TextView
        android:text="Auto-Commit To Inventory:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/autoCommitButton"
        android:layout_alignBottom="@+id/autoCommitButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/barLight" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/bulkButton"
        android:layout_below="@+id/setDetails"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Update Card Database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:id="@+id/updateDatabase"
        android:layout_below="@+id/autoCommitButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <Button
        android:text="Backup Inventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/backupInventory"
        android:layout_below="@+id/updateDatabase"
        android:layout_alignLeft="@+id/updateDatabase"
        android:layout_alignStart="@+id/updateDatabase"
        android:layout_alignRight="@+id/updateDatabase"
        android:layout_alignEnd="@+id/updateDatabase" />

</RelativeLayout>
