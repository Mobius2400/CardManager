<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.venkatesan.das.cardmanager.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="@string/searchByImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/captureCard"
            style="@android:style/Widget.Button"
            android:layout_marginTop="62dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp" />

        <Button
            android:text="@string/searchByText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchText"
            style="@android:style/Widget.Button"
            android:layout_marginTop="27dp"
            android:onClick="onButtonClick"
            android:textSize="18sp"
            android:layout_below="@+id/captureCard"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="@string/viewCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewCart"
            style="@android:style/Widget.Button"
            android:layout_marginTop="31dp"
            android:textSize="18sp"
            android:layout_below="@+id/searchText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onButtonClick" />

        <Button
            android:text="@string/viewInventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewInventory"
            style="@android:style/Widget.Button"
            android:layout_marginTop="31dp"
            android:textSize="18sp"
            android:layout_below="@+id/searchText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onButtonClick" />

        <Button
            android:text="@string/configSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Settings"
            style="@android:style/Widget.Button"
            android:textSize="18sp"
            android:layout_below="@+id/viewInventory"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="33dp" />

        <Button
            android:text="@string/aboutUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aboutUs"
            style="@android:style/Widget.Button"
            android:textSize="18sp"
            android:layout_below="@+id/viewInventory"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="33dp" />

    </LinearLayout>

</RelativeLayout>
